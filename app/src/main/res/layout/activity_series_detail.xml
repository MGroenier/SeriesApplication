<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_series_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/text_view_series_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"/>

    <Button
        android:id="@+id/button_delete_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete this series"/>

    <EditText
        android:id="@+id/edit_text_edit_series"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:maxLines="1"
        android:minLines="1"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/button_edit_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit series title"/>

</LinearLayout>